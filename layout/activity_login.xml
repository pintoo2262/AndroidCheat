<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context="com.app.noan.activity.LoginActivity">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="0dp">

        <include
            android:id="@+id/mtoolbar"
            layout="@layout/toolbar_app" />

    </android.support.design.widget.AppBarLayout>


    <EditText
        android:id="@+id/edt_Email_Login"
        style="@style/edtStyle"
        android:layout_marginLeft="@dimen/margin_8dp"
        android:layout_marginRight="@dimen/margin_8dp"
        android:layout_marginTop="@dimen/dimen_50dp"
        android:drawableLeft="@drawable/mailbox"
        android:hint="@string/email"
        android:imeOptions="actionNext"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        android:layout_height="?android:actionBarSize"
        android:layout_marginStart="@dimen/margin_8dp"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:layout_width="0dp" />


    <EditText
        android:id="@+id/edt_password_Login"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginLeft="@dimen/margin_8dp"
        android:layout_marginRight="@dimen/margin_8dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:background="@drawable/ed_border_clear"
        android:drawableLeft="@drawable/key"
        android:drawablePadding="@dimen/padding_12dp"
        android:hint="@string/password"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:padding="@dimen/margin_12dp"
        android:paddingLeft="@dimen/padding_16dp"
        android:singleLine="true"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="@color/edt_inputtextcolor"
        android:textColorHint="@color/btn_bordercolor"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_Email_Login"
        tools:ignore="MissingConstraints"
        android:layout_marginStart="@dimen/margin_8dp"
        android:layout_marginEnd="@dimen/margin_8dp" />


    <TextView
        android:id="@+id/txt_Forgot"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:gravity="right|center_vertical|center_horizontal"
        android:text="@string/forogt"
        android:textColor="@color/linkColor"
        android:textColorLink="@color/linkColor"
        android:textSize="@dimen/txt_B_13"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_password_Login"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/txt_LoginCondition"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_8dp"
        android:layout_marginRight="@dimen/margin_8dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textColorLink="@color/linkColor"
        android:textSize="@dimen/txt_B_13"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_Forgot"
        android:layout_marginStart="@dimen/margin_8dp"
        android:layout_marginEnd="@dimen/margin_8dp" />



</android.support.constraint.ConstraintLayout>
